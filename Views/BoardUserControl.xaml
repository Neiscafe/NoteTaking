<UserControl x:Class="NoteTaking.Views.BoardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NoteTaking.Views"
             xmlns:vm="clr-namespace:NoteTaking.Viewmodels"
             x:Name="boardUserControl"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:BoardViewModel}">
    <GroupBox BorderBrush="LightSkyBlue"
            BorderThickness="2">
        <GroupBox.Header>
            <TextBlock Text="{Binding Path=ShownBoard.Name, ElementName=boardUserControl}"/>
        </GroupBox.Header>
        <!--<ListBox ItemsSource="{Binding BoardCards}">
            <DataTemplate>
                --><!--<local:BoardUserControl/>--><!--
            </DataTemplate>
        </ListBox>-->
    </GroupBox>
</UserControl>
