<UserControl x:Class="NoteTaking.Views.BoardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NoteTaking.Views"
             mc:Ignorable="d">
    <Border BorderBrush="LightSkyBlue"
            CornerRadius="4"
            BorderThickness="2">
        <Canvas x:Name="CanvasMain"
                PreviewMouseMove="CanvasMain_PreviewMouseMove"
                PreviewMouseUp="CanvasMain_PreviewMouseUp"
                Background="Brown">
        </Canvas>
    </Border>
</UserControl>
